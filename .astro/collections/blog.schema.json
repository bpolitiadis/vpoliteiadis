{
  "$ref": "#/definitions/blog",
  "definitions": {
    "blog": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "excerpt": {
          "type": "string"
        },
        "coverImage": {
          "type": "string"
        },
        "author": {
          "type": "string",
          "default": "Vasileios Politeiadis"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "category": {
          "type": "string",
          "enum": [
            "technology",
            "ai",
            "development",
            "automation",
            "creative",
            "career",
            "tutorial",
            "finance"
          ]
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "publishedAt": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        },
        "readingTime": {
          "type": "string"
        },
        "draft": {
          "type": "boolean",
          "default": false
        },
        "seo": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "keywords": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "description",
        "tags",
        "category",
        "publishedAt"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}