---
import MainLayout from '../layouts/MainLayout.astro';
import PageHero from '../components/PageHero.astro';
---

<MainLayout 
  title="Contact - Vasileios Politeiadis"
  description="Get in touch with Vasileios Politeiadis for collaboration opportunities, project inquiries, or creative commissions."
  currentPath="/contact"
  bgSlug="contact-bg"
  bgEager={true}
>
  <div class="relative">
    <PageHero
      title="Contact"
      description="Let's collaborate on your next project or discuss creative opportunities"
      eager={true}
    />

  <!-- Contact Content -->
  <section class="pt-6 md:pt-8 pb-12 md:pb-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Contact Grid with Equal Heights -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-10 mb-10">
        
        <!-- Contact Form -->
        <section class="border border-primary/30 rounded-xl bg-card/40 p-5 md:p-6 backdrop-blur-sm h-fit lg:h-full flex flex-col" aria-labelledby="contact-form-title">
          <h2 id="contact-form-title" class="text-2xl font-orbitron font-bold text-primary mb-6 drop-shadow-neon flex items-center gap-3">
            <span class="text-2xl" role="img" aria-label="Email">✉️</span>
            Send Message
          </h2>
          
          <form class="space-y-6 flex-1 flex flex-col" id="contact-form" novalidate autocomplete="off" role="form" aria-labelledby="contact-form-title">
            <!-- Name Fields -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-medium text-neon-lime/90 mb-2">
                  First Name <span class="text-neon-lime" aria-label="required">*</span>
                </label>
                <input 
                  type="text" 
                  id="firstName" 
                  name="firstName" 
                  required
                  inputmode="text"
                  autocapitalize="words"
                  autocomplete="given-name"
                  maxlength="60"
                  class="w-full px-4 py-3 bg-muted border border-primary/30 rounded-lg text-foreground placeholder-primary/40 focus:border-primary focus:outline-none transition-all duration-300 focus:ring-2 focus:ring-primary/20"
                  placeholder="Your first name"
                  aria-describedby="firstName-error"
                  aria-invalid="false"
                >
                <div id="firstName-error" class="hidden text-destructive text-sm mt-1" role="alert" aria-live="polite"></div>
              </div>
              
              <div>
                <label for="lastName" class="block text-sm font-medium text-neon-lime/90 mb-2">
                  Last Name <span class="text-neon-lime" aria-label="required">*</span>
                </label>
                <input 
                  type="text" 
                  id="lastName" 
                  name="lastName" 
                  required
                  inputmode="text"
                  autocapitalize="words"
                  autocomplete="family-name"
                  maxlength="60"
                  class="w-full px-4 py-3 bg-muted border border-primary/30 rounded-lg text-foreground placeholder-primary/40 focus:border-primary focus:outline-none transition-all duration-300 focus:ring-2 focus:ring-primary/20"
                  placeholder="Your last name"
                  aria-describedby="lastName-error"
                  aria-invalid="false"
                >
                <div id="lastName-error" class="hidden text-destructive text-sm mt-1" role="alert" aria-live="polite"></div>
              </div>
            </div>
            
            <!-- Email Field -->
            <div>
              <label for="email" class="block text-sm font-medium text-neon-lime/90 mb-2">
                Email <span class="text-neon-lime" aria-label="required">*</span>
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                inputmode="email"
                autocomplete="email"
                maxlength="254"
                class="w-full px-4 py-3 bg-muted border border-primary/30 rounded-lg text-foreground placeholder-primary/40 focus:border-primary focus:outline-none transition-all duration-300 focus:ring-2 focus:ring-primary/20"
                placeholder="your.email@example.com"
                aria-describedby="email-error"
                aria-invalid="false"
              >
              <div id="email-error" class="hidden text-destructive text-sm mt-1" role="alert" aria-live="polite"></div>
            </div>
            
            <!-- Message Field -->
            <div class="flex-1">
              <label for="message" class="block text-sm font-medium text-neon-lime/90 mb-2">
                Message <span class="text-neon-lime" aria-label="required">*</span>
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="6" 
                required
                maxlength="5000"
                autocomplete="off"
                class="w-full px-4 py-3 bg-muted border border-primary/30 rounded-lg text-foreground placeholder-primary/40 focus:border-primary focus:outline-none transition-all duration-300 resize-none focus:ring-2 focus:ring-primary/20 min-h-[120px]"
                placeholder="Tell me about your project or inquiry..."
                aria-describedby="message-error"
                aria-invalid="false"
              ></textarea>
              <div id="message-error" class="hidden text-destructive text-sm mt-1" role="alert" aria-live="polite"></div>
            </div>
            
            <!-- Success/Error Messages -->
            <div id="form-message" class="hidden" role="alert" aria-live="polite">
              <div id="success-message" class="hidden text-digital-emerald bg-digital-emerald/10 border border-digital-emerald/20 p-4 rounded-lg">
                <div class="flex items-center space-x-2">
                  <span class="text-xl" role="img" aria-label="Success">✅</span>
                  <span>Message sent successfully! I'll get back to you within 24-48 hours.</span>
                </div>
              </div>
              <div id="error-message" class="hidden text-destructive bg-destructive/10 border border-destructive/25 p-4 rounded-lg">
                <div class="flex items-center space-x-2">
                  <span class="text-xl" role="img" aria-label="Error">❌</span>
                  <span>There was an error sending your message. Please try again or contact me directly.</span>
                </div>
              </div>
            </div>
            
            <!-- Submit Button with Improved Spacing -->
            <button 
              type="submit" 
              class="w-full text-lg py-4 relative overflow-hidden group bg-muted border border-primary/40 rounded-lg text-primary hover:border-primary hover:shadow-neon transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-primary/20 mt-8" 
              aria-label="Send message"
            >
              <span class="relative z-10">🚀 Send Message</span>
              <div class="absolute inset-0 bg-gradient-to-r from-neon-lime to-digital-emerald opacity-0 group-hover:opacity-100 transition-opacity duration-300" aria-hidden="true"></div>
            </button>
          </form>
        </section>

        <!-- Contact Information -->
        <aside class="space-y-8 h-fit lg:h-full flex flex-col" aria-label="Contact information">
          
          <!-- Professional Services -->
          <section class="border border-secondary/40 rounded-xl bg-card/40 p-5 md:p-6 backdrop-blur-sm flex-1" aria-labelledby="services-title">
            <h2 id="services-title" class="text-2xl font-orbitron font-bold text-secondary mb-6 drop-shadow-emerald flex items-center gap-3">
              <span class="text-2xl" role="img" aria-label="Services">💼</span>
              Services
            </h2>
            <div class="space-y-4">
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-neon-lime/20 rounded-lg flex items-center justify-center flex-shrink-0 mt-1" aria-hidden="true">
                  <span class="text-lg" role="img" aria-label="QA Automation">🤖</span>
                </div>
                <div>
                  <h3 class="font-orbitron font-bold text-neon-lime mb-1">QA Automation</h3>
                  <p class="text-neon-lime/60 text-sm">Java, Selenium, Playwright testing for European Commission projects</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-digital-emerald/20 rounded-lg flex items-center justify-center flex-shrink-0 mt-1" aria-hidden="true">
                  <span class="text-lg" role="img" aria-label="Full-Stack Development">💻</span>
                </div>
                <div>
                  <h3 class="font-orbitron font-bold text-digital-emerald mb-1">Full-Stack Development</h3>
                  <p class="text-digital-emerald/60 text-sm">React, Next.js, Node.js applications and product development</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-neon-lime/20 rounded-lg flex items-center justify-center flex-shrink-0 mt-1" aria-hidden="true">
                  <span class="text-lg" role="img" aria-label="Creative Commissions">🎨</span>
                </div>
                <div>
                  <h3 class="font-orbitron font-bold text-neon-lime mb-1">Creative Commissions</h3>
                  <p class="text-neon-lime/60 text-sm">AI-generated art, album covers, event posters, fashion designs</p>
                </div>
              </div>
            </div>
          </section>

          <!-- Contact Methods -->
          <section class="border border-primary/30 rounded-xl bg-card/40 p-5 md:p-6 backdrop-blur-sm flex-1" aria-labelledby="contact-methods-title">
            <h2 id="contact-methods-title" class="text-2xl font-orbitron font-bold text-primary mb-6 drop-shadow-neon flex items-center gap-3">
              <span class="text-2xl" role="img" aria-label="Get in touch">📞</span>
              Get In Touch
            </h2>
            <div class="space-y-4">
              <div class="flex items-center space-x-4">
                <div class="w-10 h-10 bg-neon-lime/20 rounded-lg flex items-center justify-center" aria-hidden="true">
                  <span class="text-xl" role="img" aria-label="Email">✉️</span>
                </div>
                <div>
                  <h3 class="font-orbitron font-bold text-neon-lime/90">Email</h3>
                  <a href="mailto:b.politiadis@gmail.com" class="text-neon-lime hover:text-neon-lime-dark transition-all duration-300">
                    b.politiadis@gmail.com
                  </a>
                </div>
              </div>
              
              <div class="flex items-center space-x-4">
                <div class="w-10 h-10 bg-digital-emerald/20 rounded-lg flex items-center justify-center" aria-hidden="true">
                  <svg class="w-5 h-5 text-digital-emerald" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.047-1.852-3.047-1.853 0-2.136 1.445-2.136 2.939v5.677H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-orbitron font-bold text-digital-emerald/90">LinkedIn</h3>
                  <a href="https://linkedin.com/in/vpoliteiadis" target="_blank" rel="noopener noreferrer" class="text-digital-emerald hover:text-digital-emerald-dark transition-all duration-300">
                    linkedin.com/in/vpoliteiadis
                    <span class="sr-only">(opens in new tab)</span>
                  </a>
                </div>
              </div>
              
              <div class="flex items-center space-x-4">
                <div class="w-10 h-10 bg-neon-lime/20 rounded-lg flex items-center justify-center" aria-hidden="true">
                  <svg class="w-5 h-5 text-neon-lime" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
