---
import MainLayout from '../../layouts/MainLayout.astro';
import PageHero from '../../components/PageHero.astro';
import FeaturedProjectCard from '../../components/FeaturedProjectCard.tsx';
// Import local assets to ensure consistent paths and allow editor assistance
import s2Logo from '../../assets/images/s2-logo.png';
import emmanuelleLogo from '../../assets/images/emmanuelle-silk-logo.webp';
import es1 from '../../assets/images/emmanuelle-silk-1.png';
import es2 from '../../assets/images/emmanuelle-silk-2.png';
import es3 from '../../assets/images/emmanuelle-silk-3.png';
import es4 from '../../assets/images/emmanuelle-silk-4.png';
import es5 from '../../assets/images/emmanuelle-silk-5.png';
import es6 from '../../assets/images/emmanuelle-silk-6.png';
import es7 from '../../assets/images/emmanuelle-silk-7.png';
import es8 from '../../assets/images/emmanuelle-silk-8.png';
// Featured projects content (links and assets live under /public/creative/*)
const projects = [
  {
    slug: 'emmanuelle-silk',
    title: 'Emmanuelle Silk',
    role: 'AI Fashion Collection · Creative Direction & Design',
    description:
      'Among the first AI-driven fashion collections in Greece. An 8-piece silk scarf series exploring generative aesthetics and material storytelling.',
    hero: emmanuelleLogo.src,
    // Fill the hero container for a full-bleed card look
    heroFit: 'cover',
    galleryThumbs: [
      es1.src,
      es2.src,
      es3.src,
      es4.src,
      es5.src,
      es6.src,
      es7.src,
      es8.src,
    ],
    detailUrl: '/creative/emmanuelle-silk',
    cta: { 
      label: 'View Collection', 
      href: 'https://www.emmanuellesilk.com/product-category/artificial-intelligence/', 
      external: true 
    },
  },
  {
    slug: 'smoking-two',
    title: 'Smoking Two',
    role: 'Art Direction · Visual Identity',
    description:
      'Art director for all visuals: album covers, Spotify canvases, Instagram promos, and upcoming AI-driven music videos.',
    hero: s2Logo.src,
    // Full-bleed hero to avoid letterboxing
    heroFit: 'cover',
    // Use artist embed to match the dedicated Smoking Two page experience
    spotifyEmbed:
      'https://open.spotify.com/embed/artist/3iyLSllxJjbHUi1PZOzJAm?utm_source=generator',
    detailUrl: '/creative/smoking-two',
    cta: { label: 'Listen on Spotify', href: 'https://open.spotify.com/artist/3iyLSllxJjbHUi1PZOzJAm', external: true },
  },
  {
    slug: 'arte-imaginari',
    title: 'Arte Imaginari',
    role: 'Personal Experimental AI Art Lab',
    description:
      'A personal lab where I test and push boundaries with new AI tools, techniques, and aesthetics.',
    hero: '/creative/arte-imaginari/hero.jpg',
    instagramGrid: [
      '/creative/arte-imaginari/ig-1.jpg',
      '/creative/arte-imaginari/ig-2.jpg',
      '/creative/arte-imaginari/ig-3.jpg',
      '/creative/arte-imaginari/ig-4.jpg',
      '/creative/arte-imaginari/ig-5.jpg',
      '/creative/arte-imaginari/ig-6.jpg',
      '/creative/arte-imaginari/ig-7.jpg',
      '/creative/arte-imaginari/ig-8.jpg',
      '/creative/arte-imaginari/ig-9.jpg',
    ],
    detailUrl: '/creative/arte-imaginari',
    cta: { label: 'Follow on Instagram', href: 'https://instagram.com/arte.imaginari', external: true },
  },
];
---

<MainLayout 
  title="Creative Lab - Vasileios Politeiadis" 
  description="Explore AI-generated art, digital experiments, and creative technology projects in my Creative Lab."
  currentPath="/creative"
  bgSlug="creative-bg"
  bgEager={true}
>
  <section class="min-h-screen text-matrix-white">
    <PageHero 
      title="Creative Lab"
      description="Exploring the intersection of AI, art, and technology through experimental digital creations, AI-generated imagery, and creative coding projects."
      eager={true}
    />
    <section class="px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <!-- Featured Works (3-card responsive layout) -->
        <div class="mb-20">
          <h2 class="text-primary drop-shadow-neon text-2xl md:text-3xl mb-8 uppercase tracking-widest text-center">
            Featured Works
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {projects.map((p) => (
              <FeaturedProjectCard
                client:visible
                title={p.title}
                role={p.role}
                description={p.description}
                hero={p.hero}
                heroFit={p.heroFit as 'contain' | 'cover' | undefined}
                detailUrl={p.detailUrl}
                cta={p.cta}
                galleryThumbs={p.galleryThumbs}
                spotifyEmbed={p.spotifyEmbed}
                instagramGrid={p.instagramGrid}
              />
            ))}
          </div>
        </div>

        
      </div>
    </section>
  </section>
</MainLayout> 