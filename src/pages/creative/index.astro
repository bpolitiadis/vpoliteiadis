// Featured projects content (links and assets live under /public/creative/*)
const projects = [
  {
    slug: 'emmanuelle-silk',
    title: 'Emmanuelle Silk',
    role: 'AI Fashion Collection · Creative Direction & Design',
    description:
      'Among the first AI-driven fashion collections in Greece. An 8-piece silk scarf series exploring generative aesthetics and material storytelling.',
    hero: '/creative/emmanuelle-silk/hero.jpg',
    galleryThumbs: [
      '/creative/emmanuelle-silk/thumb-1.jpg',
      '/creative/emmanuelle-silk/thumb-2.jpg',
      '/creative/emmanuelle-silk/thumb-3.jpg',
      '/creative/emmanuelle-silk/thumb-4.jpg',
      '/creative/emmanuelle-silk/thumb-5.jpg',
      '/creative/emmanuelle-silk/thumb-6.jpg',
      '/creative/emmanuelle-silk/thumb-7.jpg',
      '/creative/emmanuelle-silk/thumb-8.jpg',
    ],
    detailUrl: '/creative/emmanuelle-silk',
    cta: { label: 'View Collection', href: '/creative/emmanuelle-silk', external: false },
