  {
    slug: 'smoking-two',
    title: 'Smoking Two',
    role: 'Art Direction · Visual Identity',
    description:
      'Art director for all visuals: album covers, Spotify canvases, Instagram promos, and upcoming AI-driven music videos.',
    hero: '/creative/smoking-two/hero.jpg',
    spotifyEmbed:
      'https://open.spotify.com/embed/playlist/37i9dQZF1DXcBWIGoYBM5M?utm_source=generator',
    detailUrl: '/creative/smoking-two',
    cta: { label: 'Listen on Spotify', href: 'https://open.spotify.com/', external: true },
  },
  {
    slug: 'arte-imaginari',
    title: 'Arte Imaginari',
    role: 'Personal Experimental AI Art Lab',
    description:
      'A personal lab where I test and push boundaries with new AI tools, techniques, and aesthetics.',
    hero: '/creative/arte-imaginari/hero.jpg',
    instagramGrid: [
      '/creative/arte-imaginari/ig-1.jpg',
      '/creative/arte-imaginari/ig-2.jpg',
      '/creative/arte-imaginari/ig-3.jpg',
      '/creative/arte-imaginari/ig-4.jpg',
