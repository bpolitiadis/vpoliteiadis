---
import MainLayout from '../layouts/MainLayout.astro';
import { Button } from '@/components/ui/button';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';

// 404 page structured data for SEO
const errorStructuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Page Not Found - 404 Error",
  "description": "The page you're looking for doesn't exist. Navigate back to the main portfolio or explore our projects and blog.",
  "url": "https://vpoliteiadis.com/404",
  "isPartOf": {
    "@type": "WebSite",
    "name": "Vasileios Politeiadis - Portfolio",
    "url": "https://vpoliteiadis.com"
  }
};

// Common pages to suggest
const suggestedPages = [
  { title: "Home", description: "Main portfolio page", href: "/", icon: "üè†" },
  { title: "Projects", description: "View my work", href: "/projects", icon: "üíº" },
  { title: "Blog", description: "Read my thoughts", href: "/blog", icon: "üìù" },
  { title: "About", description: "Learn about me", href: "/about", icon: "üë§" },
  { title: "Contact", description: "Get in touch", href: "/contact", icon: "üìß" }
];
---

<MainLayout 
  title="Page Not Found - 404 Error | Vasileios Politeiadis"
  description="The page you're looking for doesn't exist. Navigate back to the main portfolio or explore our projects and blog."
  currentPath="/404"
  structuredData={errorStructuredData}
>
  <!-- Matrix Rain Background Canvas -->
  <div class="fixed inset-0 z-0 pointer-events-none" aria-hidden="true">
    <canvas 
      id="matrixCanvas" 
      class="w-full h-full opacity-20"
      style="filter: blur(0.5px);"
    ></canvas>
  </div>

  <!-- Main 404 Content -->
  <section class="relative min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 xl:px-12 2xl:px-16 z-10">
    <div class="max-w-7xl mx-auto text-center">
      
      <!-- 404 Number with Matrix Effect -->
      <div class="relative mb-8">
        <h1 class="text-8xl sm:text-9xl lg:text-[12rem] font-orbitron font-black text-transparent bg-clip-text bg-gradient-to-b from-primary via-secondary to-primary animate-pulse-slow">
          404
        </h1>
        <!-- Glitch effect overlay -->
        <div class="absolute inset-0 text-8xl sm:text-9xl lg:text-[12rem] font-orbitron font-black text-primary opacity-20 animate-pulse-slow" style="text-shadow: 2px 0 0 #00FFFF, -2px 0 0 #FF1493;">
          404
        </div>
      </div>

      <!-- Error Message -->
      <div class="mb-12">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-orbitron font-bold text-foreground mb-4">
          <span class="text-primary">ERROR:</span> Page Not Found
        </h2>
      </div>

    </div>
  </section>

  <!-- Matrix Rain Script -->
  <script is:inline src="/scripts/matrix-rain.js"></script>
</MainLayout>

<style>
  /* Custom 404 page animations */
  @keyframes glitch {
    0%, 100% { transform: translate(0); }
    20% { transform: translate(-2px, 2px); }
    40% { transform: translate(-2px, -2px); }
    60% { transform: translate(2px, 2px); }
    80% { transform: translate(2px, -2px); }
  }

  /* Matrix rain canvas styling */
  #matrixCanvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  /* Enhanced hover effects */
  .group:hover .group-hover\:scale-110 {
    transform: scale(1.1);
  }

  .group:hover .group-hover\:translate-x-1 {
    transform: translateX(0.25rem);
  }

  .group:hover .group-hover\:rotate-12 {
    transform: rotate(12deg);
  }

  /* Focus styles for accessibility */
  details summary:focus-visible {
    outline: 2px solid var(--primary);
    outline-offset: 2px;
    border-radius: 4px;
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .animate-pulse-slow,
    .group-hover\:scale-110,
    .group-hover\:translate-x-1,
    .group-hover\:rotate-12,
    .hover\:scale-105 {
      animation: none;
      transform: none;
    }
  }

  /* Mobile optimizations */
  @media (max-width: 640px) {
    .text-8xl {
      font-size: 6rem;
    }
    
    .text-9xl {
      font-size: 7rem;
    }
    
    .text-\[12rem\] {
      font-size: 8rem;
    }
  }

  /* Grid layout optimizations */
  @media (min-width: 1280px) {
    .grid-cols-4 {
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }
  }

  @media (min-width: 1536px) {
    .grid-cols-5 {
      grid-template-columns: repeat(5, minmax(0, 1fr));
    }
  }

  /* Card height consistency */
  .min-h-\[280px\] {
    min-height: 280px;
  }

  /* Ensure cards maintain aspect ratio on larger screens */
  @media (min-width: 1280px) {
    .min-h-\[280px\] {
      min-height: 300px;
    }
  }
</style> 
