---
import MainLayout from '../layouts/MainLayout.astro';
import { Image } from 'astro:assets';
import avatarSrc from '../assets/images/avatar.png';
import arteImaginariAvatar from '../assets/images/arte-imaginari-avatar.png';
import { GraduationIcon, AwardIcon, MonitorIcon, PaletteIcon } from '../components/icons/Icon';
---

<MainLayout 
  title="About - Vasileios Politeiadis"
  description="Learn about Vasileios Politeiadis - Senior QA Automation Specialist, Full-Stack Developer, and AI Creative Technologist with expertise in European Commission projects and modern web development."
  currentPath="/about"
  bgSlug="about-bg"
  bgEager={true}
  bgOpacityClass="opacity-70 md:opacity-80"
  bgOverlayClass="from-black/20 via-black/10 to-black/25"
>
  
  <!-- Hero Section -->
  <section class="relative isolate z-10 min-h-[40vh] flex items-center justify-center pt-16 md:pt-20 lg:pt-24">
    <div class="w-full">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <!-- Centered circular holographic avatar -->
        <div class="avatar-orb relative mb-6 md:mb-8" role="img" aria-label="Portrait of Vasileios Politeiadis">
          <Image src={avatarSrc} alt="Vasileios Politeiadis avatar" class="holo-avatar block w-24 h-24 md:w-32 md:h-32 lg:w-36 lg:h-36 rounded-full object-cover mx-auto" widths={[96,128,144]} sizes="(max-width: 768px) 96px, (max-width: 1024px) 128px, 144px" format="webp" loading="eager" />
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="relative z-10 pt-8 md:pt-12 pb-16">
    <div class="max-w-5xl xl:max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 space-y-8 md:space-y-10">
      
      <!-- Professional Identity Summary -->
      <div class="card fade-in-card" data-delay="0">
        <h2 class="text-2xl font-orbitron font-bold text-neon-lime mb-6 text-shadow-neon flex items-center gap-3">
          <AwardIcon size="lg" className="text-neon-lime" aria-label="Professional identity icon" />
          Professional Summary
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6">
          <div class="bg-card/50 p-4 rounded-xl border border-secondary/30 hover:border-secondary/50 transition-colors shadow-emerald flex flex-col">
            <h3 class="font-orbitron font-bold text-digital-emerald mb-2 text-shadow-emerald leading-tight text-[1.05rem] md:text-lg">ðŸ¤– QA Automation Specialist</h3>
            <p class="text-sm text-matrix-white/80 mb-3 flex-grow">European Commission projects, end-to-end QA processes, Java, Selenium, Playwright</p>
            <div class="flex flex-wrap gap-2 mt-auto">
              <span class="inline-block bg-digital-emerald/10 text-digital-emerald px-2 py-1 rounded text-xs">Java</span>
              <span class="inline-block bg-digital-emerald/10 text-digital-emerald px-2 py-1 rounded text-xs">Selenium</span>
              <span class="inline-block bg-digital-emerald/10 text-digital-emerald px-2 py-1 rounded text-xs">Playwright</span>
            </div>
          </div>
          <div class="bg-card/50 p-4 rounded-xl border border-secondary/30 hover:border-secondary/50 transition-colors shadow-emerald flex flex-col">
            <h3 class="font-orbitron font-bold text-digital-emerald mb-2 text-shadow-emerald leading-tight text-[1.05rem] md:text-lg">ðŸ’» Full-Stack Developer</h3>
            <p class="text-sm text-matrix-white/80 mb-3 flex-grow">Modern web applications, React, Next.js, Supabase, cloud deployment</p>
            <div class="flex flex-wrap gap-2 mt-auto">
              <span class="inline-block bg-digital-emerald/10 text-digital-emerald px-2 py-1 rounded text-xs">React</span>
              <span class="inline-block bg-digital-emerald/10 text-digital-emerald px-2 py-1 rounded text-xs">Next.js</span>
              <span class="inline-block bg-digital-emerald/10 text-digital-emerald px-2 py-1 rounded text-xs">Supabase</span>
            </div>
          </div>
          <div class="bg-card/50 p-4 rounded-xl border border-secondary/30 hover:border-secondary/50 transition-colors shadow-emerald flex flex-col">
            <h3 class="font-orbitron font-bold text-digital-emerald mb-2 text-shadow-emerald leading-tight text-[1.05rem] md:text-lg">ðŸ”§ AI-Powered Solutions</h3>
            <p class="text-sm text-matrix-white/80 mb-3 flex-grow">AI tools, automation, streamlined workflows, smarter digital solutions</p>
            <div class="flex flex-wrap gap-2 mt-auto">
              <span class="inline-block bg-digital-emerald/10 text-digital-emerald px-2 py-1 rounded text-xs">AI Automation</span>
              <span class="inline-block bg-digital-emerald/10 text-digital-emerald px-2 py-1 rounded text-xs">Productivity</span>
              <span class="inline-block bg-digital-emerald/10 text-digital-emerald px-2 py-1 rounded text-xs">Innovation</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Current Role & Education -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 md:gap-8">

        
      </div>

      <!-- Professional Timeline & Skills Matrix - 2 Column Layout -->
      <div class="grid grid-cols-1 xl:grid-cols-2 gap-8 md:gap-10 mb-10">
        
        <!-- Left Column: Professional Timeline -->
        <div class="card fade-in-card h-fit" data-delay="3">
          <h2 class="text-2xl font-orbitron font-bold text-neon-lime mb-10 text-shadow-neon flex items-center gap-3">
