<script>
  // About page animation orchestration - 2025 Modern UX Pattern
  document.addEventListener('DOMContentLoaded', () => {
    // Initialize elements as hidden
    const aboutHeroContent = document.getElementById('about-hero-content');
    
    // Ensure proper initial state
    if (aboutHeroContent) aboutHeroContent.style.opacity = '0';
    
    // Start hero animation after a short delay
    setTimeout(() => {
      if (aboutHeroContent) {
        aboutHeroContent.style.opacity = '1';
      }
    }, 500);

    // Modern 2025 UX: Synchronized reveal animations with AboutHero completion
    const revealPageContent = () => {
      // Get all elements with reveal animations
      const revealElements = document.querySelectorAll('[class*="animate-reveal-up-delayed"], [class*="animate-stagger-fade-delayed"]');
      
      // Trigger all animations with staggered delay
      revealElements.forEach((element, index) => {
        setTimeout(() => {
          element.classList.add('animate');
        }, index * 150);
      });
    };

    // Listen for AboutHero full completion before revealing content
    window.addEventListener('aboutHeroComplete', () => {
      // AboutHero complete â€” revealing page content
      setTimeout(revealPageContent, 100);
    });

    // Fallback: Show content after 10 seconds if AboutHero doesn't complete
    setTimeout(() => {
      const revealElements = document.querySelectorAll('[class*="animate-reveal-up-delayed"], [class*="animate-stagger-fade-delayed"]');
      revealElements.forEach((element) => {
        element.classList.add('animate');
      });
    }, 10000);
  });
</script>

