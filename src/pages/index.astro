---
import MainLayout from '../layouts/MainLayout.astro';
import Hero from '../components/Hero.astro';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
---

<MainLayout 
  title="Vasileios Politeiadis - Full-Stack Developer & AI Visionary"
  description="Full-Stack Developer & AI Visionary specializing in modern web technologies, automation, and creative AI applications."
  currentPath="/"
>
  <!-- Enhanced Hero Section - Above the fold, eager load -->
  <section class="relative min-h-screen overflow-hidden">
    <Hero />
  </section>

  <!-- Featured Section - Below the fold, lazy load -->
  <section 
    class="py-20 bg-muted/50 relative content-visibility-auto" 
    aria-labelledby="what-i-do-title"
    data-lazy-section
  >
    <div class="pointer-events-none absolute inset-0" aria-hidden="true">
      <picture>
        <source srcset="/images/bg-divider-1200.avif 1200w, /images/bg-divider-800.avif 800w, /images/bg-divider-480.avif 480w" type="image/avif" />
        <source srcset="/images/bg-divider-1200.webp 1200w, /images/bg-divider-800.webp 800w, /images/bg-divider-480.webp 480w" type="image/webp" />
        <img src="/images/bg-divider.png" alt="" class="w-full h-full object-cover opacity-10" width="2400" height="400" loading="lazy" decoding="async" fetchpriority="low" sizes="100vw" />
      </picture>
    </div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 id="what-i-do-title" class="text-3xl sm:text-4xl font-orbitron font-bold text-primary mb-4">
          What I Do
        </h2>
        <p class="text-xl text-foreground/80 max-w-3xl mx-auto">
          Blending QA automation expertise, full-stack development, and AI-driven creative solutions to build better digital experiences
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- QA Automation -->
        <Card className="group border-primary/30 bg-card/50 backdrop-blur-sm transition-all duration-300 hover:border-primary/60 hover:shadow-neon motion-safe:hover:-translate-y-1 motion-safe:hover:scale-[1.01]">
          <CardHeader className="pb-3">
            <div class="text-4xl mb-2" aria-hidden="true">
              ðŸ¤–
            </div>
            <CardTitle className="text-xl font-orbitron font-bold text-primary group-hover:text-shadow-neon transition-all duration-300">
              QA Automation
            </CardTitle>
          </CardHeader>
          <CardContent className="pt-0">
            <CardDescription className="text-foreground/80 mb-4 text-base">
              Senior automation engineer specializing in Java, Selenium, and Playwright for European Commission projects.
            </CardDescription>
            <div class="flex flex-wrap gap-2">
              <Badge variant="secondary" className="bg-primary/10 text-primary border-primary/20 hover:bg-primary/20">
                Java
              </Badge>
              <Badge variant="secondary" className="bg-primary/10 text-primary border-primary/20 hover:bg-primary/20">
                Selenium
              </Badge>
              <Badge variant="secondary" className="bg-primary/10 text-primary border-primary/20 hover:bg-primary/20">
                Playwright
              </Badge>
              <Badge variant="secondary" className="bg-primary/10 text-primary border-primary/20 hover:bg-primary/20">
                TypeScript
              </Badge>
            </div>
          </CardContent>
        </Card>
        
        <!-- Full-Stack Development -->
        <Card className="group border-secondary/30 bg-card/50 backdrop-blur-sm transition-all duration-300 hover:border-secondary/60 hover:shadow-emerald motion-safe:hover:-translate-y-1 motion-safe:hover:scale-[1.01]">
          <CardHeader className="pb-3">
            <div class="text-4xl mb-2" aria-hidden="true">
              ðŸ’»
            </div>
            <CardTitle className="text-xl font-orbitron font-bold text-secondary group-hover:text-shadow-emerald transition-all duration-300">
              Full-Stack Development
            </CardTitle>
          </CardHeader>
          <CardContent className="pt-0">
            <CardDescription className="text-foreground/80 mb-4 text-base">
              Building modern web applications with React, Next.js, and Node.js. From ideation to deployment.
            </CardDescription>
            <div class="flex flex-wrap gap-2">
              <Badge variant="secondary" className="bg-secondary/10 text-secondary border-secondary/20 hover:bg-secondary/20">
                React
              </Badge>
              <Badge variant="secondary" className="bg-secondary/10 text-secondary border-secondary/20 hover:bg-secondary/20">
                Next.js
              </Badge>
              <Badge variant="secondary" className="bg-secondary/10 text-secondary border-secondary/20 hover:bg-secondary/20">
                Prisma
              </Badge>
              <Badge variant="secondary" className="bg-secondary/10 text-secondary border-secondary/20 hover:bg-secondary/20">
                Tailwind
              </Badge>
            </div>
          </CardContent>
        </Card>
        
        <!-- AI-Powered Solutions & Automation -->
        <Card className="group border-primary/30 bg-card/50 backdrop-blur-sm transition-all duration-300 hover:border-primary/60 hover:shadow-neon motion-safe:hover:-translate-y-1 motion-safe:hover:scale-[1.01]">
          <CardHeader className="pb-3">
            <div class="text-4xl mb-2" aria-hidden="true">
              ðŸ”§
            </div>
            <CardTitle className="text-xl font-orbitron font-bold text-primary group-hover:text-shadow-neon transition-all duration-300">
              AI-Powered Solutions
            </CardTitle>
          </CardHeader>
          <CardContent className="pt-0">
            <CardDescription className="text-foreground/80 mb-4 text-base">
              Leveraging AI tools and automation to streamline workflows and enhance web development.
            </CardDescription>
            <div class="flex flex-wrap gap-2">
              <Badge variant="secondary" className="bg-primary/10 text-primary border-primary/20 hover:bg-primary/20">
                AI Tools
              </Badge>
              <Badge variant="secondary" className="bg-primary/10 text-primary border-primary/20 hover:bg-primary/20">
                Automation
              </Badge>
              <Badge variant="secondary" className="bg-primary/10 text-primary border-primary/20 hover:bg-primary/20">
                Dev Productivity
              </Badge>
            </div>
          </CardContent>
        </Card>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* Lazy loading animations for Matrix theme */
  [data-lazy-section] {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }
  
  [data-lazy-section].lazy-loaded {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Optimize animations for users who prefer reduced motion */
  @media (prefers-reduced-motion: reduce) {
    [data-lazy-section] {
      transition: none;
    }
  }
  
  /* Animation pause when tab is not visible */
  .paused * {
    animation-play-state: paused !important;
  }
  
  /* Reduced motion support */
  .reduced-motion * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
</style>
