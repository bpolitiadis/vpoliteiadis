---
interface Props {
  src: string;
  alt: string;
  class?: string;
  eager?: boolean;
  width?: number;
  height?: number;
}

const {
  src,
  alt,
  class: className = '',
  eager = true,
  width,
  height,
}: Props = Astro.props;
---

<div class={`holo-frame ${className}`}>
  <img
    src={src}
    alt={alt}
    class="w-full max-w-[640px]"
    loading={eager ? 'eager' : 'lazy'}
    fetchpriority={eager ? 'high' : undefined}
    decoding="async"
    width={width}
    height={height}
  />
  
  <!-- Decorative scanline overlay and neon edge are provided via global.css .holo-frame::before/::after -->
</div>


