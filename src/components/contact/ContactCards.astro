---
import { Linkedin, Instagram, Github, Briefcase, Bot, Monitor, Globe, Phone, Mail } from 'lucide-astro';

const services = [
  {
    icon: Bot,
    title: 'QA Automation',
    description: 'Selenium/Java, Playwright/TypeScript',
  },
  {
    icon: Monitor,
    title: 'Full-Stack Development',
    description: 'Next.js with Prisma and Supabase',
  },
  {
    icon: Globe,
    title: 'Website Development',
    description: 'Astro, TailwindCSS, React',
  },
];

const contacts = [
  {
    icon: Mail,
    title: 'Email',
    href: 'mailto:b.politiadis@gmail.com',
    text: 'b.politiadis@gmail.com',
  },
  {
    icon: Linkedin,
    title: 'LinkedIn',
    href: 'https://www.linkedin.com/in/vasileios-politeiadis/',
    text: 'linkedin.com/in/vasileios-politeiadis',
  },
  {
    icon: Instagram,
    title: 'Instagram',
    href: 'https://instagram.com/arte.imaginari',
    text: 'instagram.com/arte.imaginari',
  },
  {
    icon: Github,
    title: 'GitHub',
    href: 'https://github.com/bpolitiadis',
    text: 'github.com/bpolitiadis',
  },
];
---

<div class="space-y-8 h-full flex flex-col">
  <!-- Services -->
  <div class="rounded-xl border border-secondary/40 bg-card/40 backdrop-blur-sm shadow text-card-foreground flex-1 flex flex-col">
    <div class="flex flex-col space-y-1.5 p-6 pb-4">
      <h3
        class="text-xl md:text-2xl font-orbitron font-bold text-neon-lime mb-6 flex items-center gap-3"
        style="text-shadow: 0 0 10px rgba(57, 255, 20, 0.6)"
      >
        <Briefcase class="w-6 h-6 text-neon-lime" aria-label="Services" />
        Services
      </h3>
    </div>
    <div class="p-6 pt-0 space-y-4">
      {services.map((service) => {
        const IconComponent = service.icon;
        return (
          <div class="flex items-start space-x-4">
            <div class="w-10 h-10 bg-secondary/20 rounded-lg flex items-center justify-center flex-shrink-0" aria-hidden="true">
              <IconComponent class="w-5 h-5 text-secondary" aria-label={service.title} />
            </div>
            <div>
              <h3 class="text-base font-semibold mb-1 text-secondary">
                {service.title}
              </h3>
              <p class="text-sm text-secondary/80">{service.description}</p>
            </div>
          </div>
        );
      })}
    </div>
  </div>

  <!-- Get In Touch -->
  <div class="rounded-xl border border-primary/30 bg-card/40 backdrop-blur-sm shadow text-card-foreground flex-1 flex flex-col">
    <div class="flex flex-col space-y-1.5 p-6 pb-4">
      <h3 class="text-xl md:text-2xl font-orbitron font-bold text-neon-lime mb-6 flex items-center gap-3" style="text-shadow: 0 0 10px rgba(57, 255, 20, 0.6)">
        <Phone class="w-6 h-6 text-neon-lime" aria-label="Get in touch" />
        Get In Touch
      </h3>
    </div>
    <div class="p-6 pt-0 space-y-4">
      {contacts.map((contact) => {
        const IconComponent = contact.icon;
        const isExternal = contact.href.startsWith('http');
        return (
          <div class="flex items-center space-x-4">
            <div class="w-10 h-10 bg-secondary/20 rounded-lg flex items-center justify-center" aria-hidden="true">
              <IconComponent class="w-5 h-5 text-secondary" aria-label={contact.title} />
            </div>
            <div>
              <h3 class="text-base font-semibold mb-1 text-secondary">{contact.title}</h3>
              <a
                href={contact.href}
                target={isExternal ? "_blank" : undefined}
                rel={isExternal ? "noopener noreferrer" : undefined}
                class="text-sm text-secondary/80 hover:text-secondary transition-colors"
              >
                {contact.text}
                {isExternal && <span class="sr-only">(opens in new tab)</span>}
              </a>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</div>
