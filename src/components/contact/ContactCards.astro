---
import { Linkedin, Instagram, Github, Briefcase, Bot, Monitor, Globe, Phone, Mail } from 'lucide-astro';
---

<div class="space-y-8 h-full flex flex-col">
  <!-- Services -->
  <div class="rounded-xl border border-secondary/40 bg-card/40 backdrop-blur-sm shadow text-card-foreground flex-1 flex flex-col">
    <div class="flex flex-col space-y-1.5 p-6 pb-4">
      <h3
        class="text-xl md:text-2xl font-orbitron font-bold text-neon-lime mb-6 flex items-center gap-3"
        style="text-shadow: 0 0 10px rgba(57, 255, 20, 0.6)"
      >
        <Briefcase class="w-6 h-6 text-neon-lime" aria-label="Services" />
        Services
      </h3>
    </div>
    <div class="p-6 pt-0 space-y-4">
      <!-- QA Automation -->
      <div class="flex items-start space-x-4">
        <div class="w-8 h-8 bg-primary/20 rounded-lg flex items-center justify-center flex-shrink-0 mt-1" aria-hidden="true">
          <Bot class="w-5 h-5 text-primary" aria-label="QA Automation" />
        </div>
        <div>
          <h3
            class="text-base font-semibold mb-1 group-hover:opacity-80 transition-opacity"
            style="color: #39FF14; text-shadow: 0 0 10px rgba(57, 255, 20, 0.6), 0 0 20px rgba(57, 255, 20, 0.3);"
          >
            QA Automation
          </h3>
          <p class="text-sm leading-relaxed" style="color: #39FF14; text-shadow: 0 0 10px rgba(57, 255, 20, 0.5);">Selenium/Java, Playwright/TypeScript</p>
        </div>
      </div>

      <!-- Full-Stack Development -->
      <div class="flex items-start space-x-4">
        <div class="w-8 h-8 bg-secondary/20 rounded-lg flex items-center justify-center flex-shrink-0 mt-1" aria-hidden="true">
          <Monitor class="w-5 h-5 text-secondary" aria-label="Full-Stack Development" />
        </div>
        <div>
          <h3 class="text-base font-semibold mb-1 group-hover:opacity-80 transition-opacity" style="color: #00B86B; text-shadow: 0 0 10px rgba(0, 184, 107, 0.6), 0 0 20px rgba(0, 184, 107, 0.3);">Full-Stack Development</h3>
          <p class="text-secondary/60 text-sm">NextJS with Prisma and Supabase</p>
        </div>
      </div>

      <!-- Website Development -->
      <div class="flex items-start space-x-4">
        <div class="w-8 h-8 bg-primary/20 rounded-lg flex items-center justify-center flex-shrink-0 mt-1" aria-hidden="true">
          <Globe class="w-5 h-5 text-primary" aria-label="Website Development" />
        </div>
        <div>
          <h3 class="text-base font-semibold mb-1 group-hover:opacity-80 transition-opacity" style="color: #39FF14; text-shadow: 0 0 10px rgba(57, 255, 20, 0.6), 0 0 20px rgba(57, 255, 20, 0.3);">Website Development</h3>
          <p class="text-primary/60 text-sm">Astro, TailwindCSS, React</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Get In Touch -->
  <div class="rounded-xl border border-primary/30 bg-card/40 backdrop-blur-sm shadow text-card-foreground flex-1 flex flex-col">
    <div class="flex flex-col space-y-1.5 p-6 pb-4">
      <h3 class="text-xl md:text-2xl font-orbitron font-bold text-neon-lime mb-6 flex items-center gap-3" style="text-shadow: 0 0 10px rgba(57, 255, 20, 0.6)">
        <Phone class="w-6 h-6 text-neon-lime" aria-label="Get in touch" />
        Get In Touch
      </h3>
    </div>
    <div class="p-6 pt-0 space-y-4">
      <!-- Email -->
      <div class="flex items-center space-x-4">
        <div class="w-10 h-10 bg-primary/20 rounded-lg flex items-center justify-center" aria-hidden="true">
          <Mail class="w-5 h-5 text-primary" aria-label="Email" />
        </div>
        <div>
          <h3 class="font-orbitron font-bold text-primary">Email</h3>
          <a
            href="mailto:b.politiadis@gmail.com"
            class="text-primary/80 hover:text-primary transition-all duration-300 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary/60 rounded"
          >
            b.politiadis@gmail.com
          </a>
        </div>
      </div>
      
      <!-- LinkedIn -->
      <div class="flex items-center space-x-4">
        <div class="w-10 h-10 bg-secondary/20 rounded-lg flex items-center justify-center" aria-hidden="true">
          <Linkedin class="w-5 h-5 text-secondary" aria-label="LinkedIn" />
        </div>
        <div>
          <h3 class="font-orbitron font-bold text-secondary">LinkedIn</h3>
          <a
            href="https://www.linkedin.com/in/vasileios-politeiadis/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-secondary/80 hover:text-secondary transition-all duration-300 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-secondary/60 rounded"
          >
            linkedin.com/in/vasileios-politeiadis
            <span class="sr-only">(opens in new tab)</span>
          </a>
        </div>
      </div>
      
      <!-- Instagram -->
      <div class="flex items-center space-x-4">
        <div class="w-10 h-10 bg-primary/20 rounded-lg flex items-center justify-center" aria-hidden="true">
          <Instagram class="w-5 h-5 text-primary" aria-label="Instagram" />
        </div>
        <div>
          <h3 class="font-orbitron font-bold text-primary">Instagram</h3>
          <a
            href="https://instagram.com/arte.imaginari"
            target="_blank"
            rel="noopener noreferrer"
            class="text-primary/80 hover:text-primary transition-all duration-300 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary/60 rounded"
          >
            instagram.com/arte.imaginari
            <span class="sr-only">(opens in new tab)</span>
          </a>
        </div>
      </div>
      
      <!-- GitHub -->
      <div class="flex items-center space-x-4">
        <div class="w-10 h-10 bg-secondary/20 rounded-lg flex items-center justify-center" aria-hidden="true">
          <Github class="w-5 h-5 text-secondary" aria-label="GitHub" />
        </div>
        <div>
          <h3 class="font-orbitron font-bold text-secondary">GitHub</h3>
          <a
            href="https://github.com/bpolitiadis"
            target="_blank"
            rel="noopener noreferrer"
            class="text-secondary/80 hover:text-secondary transition-all duration-300 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-secondary/60 rounded"
          >
            github.com/bpolitiadis
            <span class="sr-only">(opens in new tab)</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
