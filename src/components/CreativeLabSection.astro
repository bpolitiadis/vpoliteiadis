---
import CreativeCard from './CreativeCard.astro';
import AImage from './media/AImage.astro';
import DecryptedText from './DecryptedText';
import creativeBg from '../assets/images/creative-bg.webp';
import emmanuelleSilkLogo from '../assets/images/emmanuelle-silk-logo.webp';
import s2Logo from '../assets/images/s2-logo.webp';
import arteImaginariWide from '../assets/images/arte-imaginari-wide.webp';

// Creative projects data - matches structure from /creative/index.astro
const creativeProjects = [
  {
    slug: 'emmanuelle-silk',
    title: 'Emmanuelle Silk',
    description:
      'Designed an 8-piece silk scarf collection, imagined and generated by AI. Among the first AI-driven fashion collections in Greece.',
    hero: emmanuelleSilkLogo,
    heroFit: 'cover' as const,
    tools: ['Stable Diffusion', 'Midjourney', 'Photoshop'],
    cta: {
      label: 'View Collection',
      href: 'https://www.emmanuellesilk.com/product-category/artificial-intelligence/',
      external: true
    },
  },
  {
    slug: 'smoking-two',
    title: 'Smoking Two',
    description:
      'Visual Artwork Director responsible for creating album covers, social media promos, and AI-driven music videos that define the project\'s aesthetic.',
    hero: s2Logo,
    heroFit: 'cover' as const,
    tools: ['Midjourney', 'KlingAI', 'NanoBanana', 'Veo3'],
    cta: {
      label: 'Listen on Spotify',
      href: 'https://open.spotify.com/artist/3iyLSllxJjbHUi1PZOzJAm',
      external: true
    },
  },
  {
    slug: 'arte-imaginari',
    title: 'Arte Imaginari',
    description:
      'A personal experimental lab where I test and push boundaries with cutting-edge AI tools, techniques, and innovative visual aesthetics.',
    hero: arteImaginariWide,
    tools: ['Midjourney', 'NanoBanana', 'Veo3', 'KlingAI', 'Stable Diffusion', 'AnimateDiff', 'Sora'],
    cta: { label: 'Follow on Instagram', href: 'https://instagram.com/arte.imaginari', external: true },
  },
];
---

<section
  id="creative"
  class="relative py-24 md:py-32 lg:py-40 xl:py-48 px-4 sm:px-6 lg:px-8 bg-background overflow-visible min-h-[120vh] md:min-h-[100vh]"
  role="region"
  aria-labelledby="creative-heading"
  data-testid="page-creative"
>
  {/* Background image */}
  <div class="absolute inset-0 z-0 overflow-hidden">
    <AImage
      src={creativeBg}
      alt=""
      preset="hero"
      class="w-full h-full object-cover object-center"
      aria-hidden="true"
      quality={75}
      format="avif"
    />
    <div class="absolute inset-0 bg-background/50"></div>
  </div>

  {/* Background decorative elements - more artistic */}
  <div class="absolute inset-0 z-0 overflow-hidden pointer-events-none">
    <div class="absolute top-0 left-1/3 w-px h-40 bg-gradient-to-b from-neon-cyan/20 via-neon-cyan/10 to-transparent" />
    <div class="absolute top-0 right-1/3 w-px h-40 bg-gradient-to-b from-neon-cyan/20 via-neon-cyan/10 to-transparent" />
    <div class="absolute bottom-0 left-1/2 w-32 h-px bg-gradient-to-r from-transparent via-neon-cyan/10 to-transparent" />
    {/* Floating particles effect */}
    <div class="absolute top-1/4 left-1/4 w-1 h-1 bg-neon-cyan/30 rounded-full animate-pulse" />
    <div class="absolute top-1/3 right-1/4 w-1 h-1 bg-neon-cyan/30 rounded-full animate-pulse" style="animation-delay: 1s" />
    <div class="absolute bottom-1/4 left-1/3 w-1 h-1 bg-neon-cyan/30 rounded-full animate-pulse" style="animation-delay: 2s" />
  </div>

  <div class="max-w-7xl mx-auto relative z-10">
    {/* Section Headline */}
    <div class="text-center mb-12 md:mb-16">
      <h2
        id="creative-heading"
        class="text-3xl md:text-4xl lg:text-5xl font-orbitron font-bold mb-3"
      >
        <DecryptedText
          client:visible
          text="Creative Lab"
          speed={60}
          sequential={true}
          revealDirection="start"
          className="text-cyan"
          encryptedClassName="text-cyan/30"
          parentClassName="block"
          revealedStyle={{
            textShadow: '0 0 20px rgba(0, 255, 255, 0.8), 0 0 40px rgba(0, 255, 255, 0.4)',
            background: 'linear-gradient(135deg, #00FFFF 0%, #00BFFF 50%, #00FFFF 100%)',
            WebkitBackgroundClip: 'text',
            WebkitTextFillColor: 'transparent',
            backgroundClip: 'text',
          }}
        />
      </h2>
      <p class="text-base md:text-lg text-matrix-white/70 font-inter max-w-2xl mx-auto">
        AI-driven creative experiments
      </p>
    </div>

    {/* Creative Projects Grid */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {creativeProjects.map((project) => (
        <CreativeCard project={project} />
      ))}
    </div>
  </div>
</section>

<script>
  import { autoInitTextReveal } from '../lib/animations';

  // Initialize text reveal animations for creative cards
  autoInitTextReveal();
</script>
