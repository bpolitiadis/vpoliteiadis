---
import { Image } from 'astro:assets';
import vpLogo from '../assets/images/vp-logo.png';
import SocialLink from './SocialLink.astro';
import { getAllSocialProfiles } from '../lib/social-config';

const socialProfiles = getAllSocialProfiles();
---

<footer class="mt-auto">
  <!-- Neon lime gradient divider -->
  <div class="h-px w-full bg-gradient-to-r from-primary via-secondary to-neon-cyan opacity-60"></div>
  
  <!-- Matrix glyphs texture layer -->
  <div class="absolute inset-0 opacity-[0.02] pointer-events-none">
    <div class="absolute inset-0 bg-matrix-pattern"></div>
  </div>

  <div class="relative bg-matrix-black border-t border-border">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4 py-4 min-h-[60px]">
        <!-- Left: VP monogram logo with subtle glow -->
        <a href="/" class="flex items-center gap-3 group" aria-label="Go to homepage">
          <div class="relative">
            <Image
              src={vpLogo}
              alt="Vasileios Politeiadis logo"
              width={28}
              height={28}
              class="w-7 h-7 rounded-md transition-all duration-300 group-hover:scale-110"
            />
            <!-- Subtle glow effect -->
            <div class="absolute inset-0 rounded-md bg-primary opacity-20 blur-md group-hover:opacity-30 transition-opacity duration-300"></div>
          </div>
          <span class="font-orbitron text-primary text-base tracking-wide transition-colors group-hover:text-secondary">
            VP
          </span>
        </a>

        <!-- Center: copyright text -->
        <div class="flex items-center text-sm text-muted-foreground text-center">
          <span>&copy; 2025 Vasileios Politeiadis. All rights reserved.</span>
        </div>

        <!-- Right: social icons with neon hover glow -->
        <nav class="flex items-center gap-3" aria-label="Social links">
          {socialProfiles.map((profile) => (
            <SocialLink profile={profile} size="md" />
          ))}
        </nav>
      </div>
    </div>
  </div>
</footer>


