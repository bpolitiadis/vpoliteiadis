---
import { Image } from 'astro:assets';
import avatarSrc from '../assets/images/avatar.png';
import bgSrc from '../assets/images/home-bg.png';
// Hero component with Matrix-inspired animations and neon glow effects
// Features: Animated background, VP logo, smooth text animations, and interactive CTA
---

<!-- Background decorative image (content-neutral) -->
<div class="absolute inset-0 overflow-hidden pointer-events-none bg-gradient-to-br from-background via-muted/20 to-background" aria-hidden="true">
  <Image src={bgSrc} alt="" class="w-full h-full object-cover opacity-25" widths={[480,800,1200,1600,2000]} sizes="100vw" format="webp" loading="eager" fetchpriority="high" />
</div>

<!-- Matrix Rain Canvas -->
<canvas 
  id="matrixCanvas" 
  class="absolute inset-0 pointer-events-none opacity-20 z-0"
  aria-hidden="true"
></canvas>

<!-- Main Content Container -->
<div class="relative z-10 flex flex-col items-center justify-center min-h-screen px-4 sm:px-6 lg:px-8 text-center">
  
  <!-- Avatar -->
  <div class="mb-8 group mt-16 sm:mt-20 lg:mt-24">
    <div class="relative">
      <Image 
        src={avatarSrc}
        alt="Portrait of Vasileios Politeiadis"
        class="relative w-32 h-32 mx-auto rounded-full border-2 border-primary shadow-neon object-cover"
        widths={[128, 160, 192]}
        sizes="128px"
        format="webp"
        loading="eager"
        fetchpriority="high"
      />
    </div>
  </div>

  <!-- Main Headline with Enhanced Typography -->
  <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-orbitron font-bold mb-6 animate-fade-in">
    <span class="block text-primary text-glow">Full-Stack Developer</span>
    <span class="block text-secondary mt-2">& AI Visionary</span>
  </h1>

  <!-- Subtitle with Enhanced Styling -->
  <p class="text-xl sm:text-2xl lg:text-3xl text-foreground/90 mb-8 max-w-3xl mx-auto font-inter leading-relaxed animate-slide-up">
    <span class="text-primary font-medium">QA Automation Engineer</span> by day,<br />
    <span class="text-secondary font-medium">Creative Technologist</span> by passion.
  </p>

  <!-- CTA Buttons with Enhanced Styling -->
  <div class="flex flex-col sm:flex-row gap-6 justify-center items-center animate-slide-up mb-16">
    <a 
      href="/projects" 
      class="group relative overflow-hidden px-8 py-4 bg-cyber-blue text-white font-orbitron font-semibold tracking-wide rounded-xl border-2 border-cyber-blue transition-all duration-300 hover:bg-primary hover:border-primary hover:text-black hover:shadow-neon hover:-translate-y-1 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary/70 focus-visible:ring-offset-2 focus-visible:ring-offset-dark-slate"
      aria-label="Explore my projects and portfolio"
    >
      <!-- Button Content -->
      <span class="relative z-10 flex items-center gap-3">
        <span class="text-2xl" aria-hidden="true">ðŸš€</span>
        <span>Explore My Work</span>
      </span>
    </a>
    
    <a 
      href="/about" 
      class="group relative overflow-hidden px-8 py-4 bg-transparent text-foreground font-orbitron font-semibold tracking-wide rounded-xl border-2 border-secondary transition-all duration-300 hover:bg-secondary hover:text-secondary-foreground hover:shadow-emerald hover:-translate-y-1"
      aria-label="Learn more about my background and experience"
    >
      <!-- Button Content -->
      <span class="relative z-10 flex items-center gap-3">
        <span class="text-2xl" aria-hidden="true">ðŸ‘¤</span>
        <span>Learn More</span>
      </span>
    </a>
  </div>
</div>

<!-- Matrix Code Rain Animation Script -->
<script src="/scripts/matrix-rain.js" async></script>

<!-- Keep only component-specific extras not already in global Tailwind layers -->
<style>
  @keyframes spin-slow { from { transform: rotate(0deg); } to { transform: rotate(360deg); } }
  .animate-spin-slow { animation: spin-slow 8s linear infinite; }
</style>