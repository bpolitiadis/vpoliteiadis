---
import AvatarBubble from './AvatarBubble.tsx';
import MessageBubble from './MessageBubble.tsx';
---

<section
  class="relative w-full h-full flex flex-col justify-between"
  aria-label="Intro hero"
  data-testid="hero-intro-section"
>
  <!-- Chat bubble layout - centered -->
  <div class="relative z-10 w-full max-w-6xl px-4 sm:px-6 lg:px-8 mx-auto flex items-center justify-center flex-1" data-testid="hero-chat-layout">
    <div id="chat-layout" class="flex items-start gap-4 md:gap-6 justify-center">
      <!-- Avatar -->
      <div class="flex-shrink-0">
        <AvatarBubble client:load />
      </div>
      <!-- Message bubble -->
      <div class="max-w-lg lg:max-w-xl">
        <MessageBubble client:load />
      </div>
    </div>
  </div>
  
</section>



