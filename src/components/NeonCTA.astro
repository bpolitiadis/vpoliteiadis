---
interface Props {
  href: string;
  text?: string;
  class?: string;
  ariaLabel?: string;
  target?: string;
  rel?: string;
}

const {
  href,
  text,
  class: className = '',
  ariaLabel,
  target = '_self',
  rel = 'noopener noreferrer',
}: Props = Astro.props;
---

<a
  href={href}
  class={`neon-cta ripple ${className}`}
  aria-label={ariaLabel || text}
  target={target}
  rel={rel}
>
  <slot>{text}</slot>
  
  <!-- External icon -->
  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
  </svg>
</a>

<style>
  .ripple {
    position: relative;
    overflow: hidden;
  }
  .ripple::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    pointer-events: none;
    box-shadow: 0 0 0 0 rgba(57,255,20,0.35);
    transition: box-shadow 300ms ease;
  }
  .ripple:hover::after {
    box-shadow: 0 0 0 8px rgba(57,255,20,0.08), 0 0 0 14px rgba(57,255,20,0.04);
  }
  @media (prefers-reduced-motion: reduce) {
    .ripple::after, .ripple:hover::after { transition: none; }
  }
</style>


