---
interface Props {
  title: string;
  description?: string;
  class?: string;
}

const { title, description, class: className = '' }: Props = Astro.props;
---

<div class={`glass-card ${className}`}>
  <h3 class="text-sm font-semibold neon-heading mb-1">{title}</h3>
  {description && (
    <p class="text-xs text-text-muted leading-relaxed">{description}</p>
  )}
</div>


