---
export interface Props {
  creative: {
    slug: string;
    data: {
      title: string;
      description: string;
      excerpt?: string;
      mediaType: 'image' | 'video' | 'gallery';
      coverImage: string;
      coverVideo?: string;
      gallery?: string[];
      tools: string[];
      tags: string[];
      category: string;
      featured: boolean;
      aspectRatio?: string;
      instagramUrl?: string;
    };
  };
}

const { creative } = Astro.props;
import VercelImage from './VercelImage.astro';

// Determine aspect ratio class for responsive layout
const getAspectRatioClass = (aspectRatio?: string) => {
  switch (aspectRatio) {
    case '16/9': return 'aspect-video';
    case '1/1': return 'aspect-square';
    case '4/3': return 'aspect-[4/3]';
    case '3/2': return 'aspect-[3/2]';
    default: return 'aspect-[4/3]'; // Default aspect ratio
  }
};

const aspectClass = getAspectRatioClass(creative.data.aspectRatio);
---

<article 
  class="group relative border border-border rounded-2xl bg-card/60 p-6 md:p-8 transition-all hover:border-primary hover:shadow-neon cursor-pointer shadow-inner backdrop-blur-md"
  aria-labelledby={`creative-${creative.slug}-title`}
>
  <!-- Featured Badge -->
    {creative.data.featured && (
      <div class="bg-primary text-background px-2 py-1 rounded font-bold text-xs uppercase absolute -mt-4 -ml-4">
        Featured
      </div>
    )}

  <!-- Media Container -->
  <div class={`relative overflow-hidden ${aspectClass} mb-6 rounded-xl content-visibility-auto`}>
    <picture>
      <source srcset="/images/project-card-2-bg-800.avif 800w, /images/project-card-2-bg-480.avif 480w" type="image/avif" />
      <source srcset="/images/project-card-2-bg-800.webp 800w, /images/project-card-2-bg-480.webp 480w" type="image/webp" />
      <img src="/images/project-card-2-bg.png" alt="" class="absolute inset-0 w-full h-full object-cover opacity-15" width="1200" height="480" loading="lazy" decoding="async" aria-hidden="true" sizes="(max-width: 768px) 100vw, 600px" />
    </picture>
    <!-- Video Cover -->
    {creative.data.coverVideo ? (
      <video
        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
        autoplay
        muted
        loop
        playsinline
        preload="metadata"
        poster={creative.data.coverImage}
      >
        <source src={creative.data.coverVideo} type="video/mp4" />
        <VercelImage src={creative.data.coverImage} alt={`${creative.data.title} cover image`} class="w-full h-full object-cover" loading="lazy" decoding="async" fetchpriority="low" />
      </video>
    ) : (
       <VercelImage
        src={creative.data.coverImage}
        alt={`${creative.data.title} cover image`}
        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500 will-change-transform"
        loading="lazy"
        decoding="async"
        fetchpriority="low"
        sizes="(max-width: 768px) 100vw, 600px"
      />
    )}
    
    <!-- Hover Overlay with neon glow effect -->
    <div class="absolute inset-0 bg-gradient-to-t from-background/90 via-background/50 to-transparent 
                opacity-0 group-hover:opacity-100 transition-all duration-300 will-change-opacity">
      
      <!-- Overlay Content -->
      <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
        <h3 id={`creative-${creative.slug}-title`} class="text-h3 font-orbitron text-primary mb-2 group-hover:text-foreground transition-colors">
          {creative.data.title}
        </h3>
        
        <p class="text-body text-foreground mb-4 line-clamp-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          {creative.data.excerpt || creative.data.description}
        </p>

        <!-- Media Type Indicator -->
        <div class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 delay-150">
          {creative.data.mediaType === 'video' && (
            <svg class="h-4 w-4 text-neon-lime" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polygon points="5,3 19,12 5,21" />
            </svg>
          )}
          {creative.data.mediaType === 'gallery' && (
            <svg class="h-4 w-4 text-neon-lime" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
              <circle cx="8.5" cy="8.5" r="1.5" />
              <polyline points="21,15 16,10 5,21" />
              <path d="M3 16l4-4 4 4" />
              <path d="M7 12l4-4 4 4" />
            </svg>
          )}
          <span class="text-xs text-muted-foreground uppercase tracking-wide">
            {creative.data.mediaType}
          </span>
        </div>
      </div>
    </div>

    <!-- Category Badge -->
     <div class="absolute top-4 right-4 px-2 py-1 bg-background/80 text-muted-foreground text-xs rounded">
      {creative.data.category.replace('-', ' ')}
    </div>

    <!-- Instagram Link (if available) -->
    {creative.data.instagramUrl && (
      <a 
        href={creative.data.instagramUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="absolute top-4 right-16 p-2 bg-background/80 text-primary rounded-full 
               hover:bg-primary hover:text-background transition-all duration-300
               opacity-0 group-hover:opacity-100"
        aria-label={`Open Instagram post for ${creative.data.title} (opens in new tab)`}
      >
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="2" y="2" width="20" height="20" rx="5" ry="5" />
          <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" />
          <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" />
        </svg>
      </a>
    )}
  </div>

  <!-- Card Content -->
  <div>
    <h3 class="text-xl md:text-2xl font-orbitron text-primary mb-3 group-hover:text-foreground transition-colors">
      {creative.data.title}
    </h3>
    
    <p class="text-sm md:text-base text-muted-foreground mb-6 line-clamp-2">
      {creative.data.excerpt || creative.data.description}
    </p>

    <!-- Minimal Tags Display -->
    <div class="flex flex-wrap gap-2 mb-6">
      {creative.data.tags.slice(0, 2).map(tag => (
        <span class="bg-secondary/10 border border-secondary/50 text-secondary rounded-full px-3 py-1 text-xs font-medium">
          {tag}
        </span>
      ))}
      {creative.data.tags.length > 2 && (
        <span class="bg-secondary/10 border border-secondary/50 text-secondary rounded-full px-3 py-1 text-xs font-medium">
          +{creative.data.tags.length - 2}
        </span>
      )}
    </div>

    <!-- View Button -->
    <button
      class="w-full inline-flex items-center justify-center px-4 py-2 bg-transparent border border-primary text-primary 
             hover:bg-primary hover:text-background transition-all duration-300 rounded-lg
             group-hover:animate-glow focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary/60"
      aria-label={`View details for ${creative.data.title}`}
      type="button"
    >
      View Details
              <svg class="ml-2 h-4 w-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <line x1="5" y1="12" x2="19" y2="12" />
          <polyline points="12,5 19,12 12,19" />
        </svg>
    </button>
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style> 