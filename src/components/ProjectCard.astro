---
export interface Props {
  project: {
    slug: string;
    data: {
      title: string;
      description: string;
      coverImage: string;
      techStack: string[];
      liveUrl?: string;
    };
  };
}

const { project } = Astro.props;
---

<div 
  class="group relative flex flex-col h-full w-full"
  data-testid={`project-card-${project.slug}`}
>
  <!-- Project Cover Image -->
  <div class="relative w-full overflow-hidden rounded-lg" style="aspect-ratio: 16 / 9">
    {project.data.liveUrl ? (
      <a
        href={project.data.liveUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="block w-full h-full"
        aria-label={`Visit ${project.data.title} website`}
      >
        <img
          src={project.data.coverImage}
          alt={project.data.title}
          class="w-full h-full object-cover rounded-lg"
          loading="lazy"
          decoding="async"
          width={1280}
          height={720}
        />
      </a>
    ) : (
      <img
        src={project.data.coverImage}
        alt={project.data.title}
        class="w-full h-full object-cover rounded-lg"
        loading="lazy"
        decoding="async"
        width={1280}
        height={720}
      />
    )}
  </div>

  <div class="flex flex-col space-y-3 mt-4">
    <!-- Title -->
    <div class="font-bold leading-none tracking-tight font-orbitron text-lg md:text-xl">
      {project.data.liveUrl ? (
        <a
          href={project.data.liveUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-neon-lime hover:text-neon-lime/90 transition-colors"
        >
          {project.data.title}
          <span class="text-sm opacity-70">â†—</span>
        </a>
      ) : (
        <span class="text-neon-lime">{project.data.title}</span>
      )}
    </div>

    <!-- Description -->
    <p class="text-sm text-matrix-white/85 leading-relaxed">
      {project.data.description}
    </p>

    <!-- Tech Stack Badges -->
    <div class="flex flex-wrap gap-2">
      {project.data.techStack.map((tech) => (
        <div class="inline-flex items-center border border-digital-emerald/50 bg-transparent text-digital-emerald hover:border-digital-emerald/70 text-xs px-2.5 py-0.5 rounded-md transition-colors">
          {tech}
        </div>
      ))}
    </div>
  </div>
</div>
