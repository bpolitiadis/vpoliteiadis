---
import AImage from './media/AImage.astro';
import type { ImageMetadata } from 'astro';

export interface BlogPostMeta {
  slug: string;
  title: string;
  excerpt?: string;
  description?: string;
  coverImage?: ImageMetadata | string;
  tags: string[];
  publishedAt: string | Date;
  readingTime?: string;
}

interface Props {
  post: BlogPostMeta;
}

const { post } = Astro.props as Props;

// Format date for display
const formattedDate = new Date(post.publishedAt).toLocaleDateString('en-US', {
  month: 'short',
  year: 'numeric'
});
---

<div
  class="group relative flex flex-col h-full w-full text-animation rounded-xl transition-all duration-500 ease-out hover:-translate-y-1"
  data-title={post.title}
  data-excerpt={post.excerpt || post.description}
  data-tags={post.tags.join(',')}
>
  {/* Blog Post Image */}
  {post.coverImage && (
    <div class="relative w-full overflow-hidden rounded-lg" style="aspect-ratio: 16 / 9">
      <a
        href={`/blog/${post.slug}`}
        class="block w-full h-full"
        aria-label={`Read ${post.title}`}
      >
        <AImage
          src={post.coverImage}
          alt={post.title}
          preset="card"
          class="w-full h-full object-cover rounded-lg transition-transform duration-500 ease-out group-hover:scale-105 will-change-transform"
          loading="lazy"
          decoding="async"
          width={1024}
          height={576}
          quality={75}
          format="avif"
        />
        <!-- Matrix gradient overlay -->
        <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-background/95 via-background/40 to-transparent opacity-90 group-hover:opacity-50 transition-opacity duration-400 rounded-lg" />
      </a>
    </div>
  )}

  <div class="flex flex-col space-y-3 mt-4">
    {/* Date and Reading Time - Minimal design */}
    <div class="flex items-center gap-2 text-xs text-matrix-white/60 font-inter transition-colors duration-300 group-hover:text-matrix-white/75">
      <time datetime={new Date(post.publishedAt).toISOString()}>
        {formattedDate}
      </time>
      {post.readingTime && (
        <>
          <span aria-hidden="true">â€¢</span>
          <span>{post.readingTime}</span>
        </>
      )}
    </div>
    <div class="font-bold leading-none tracking-tight font-orbitron text-lg md:text-xl">
      <a
        href={`/blog/${post.slug}`}
        class="blog-card-title inline-flex items-center gap-2 transition-all duration-300"
      >
        {post.title}
      </a>
    </div>
    <div class="text-sm text-matrix-white/85 leading-relaxed transition-colors duration-300 group-hover:text-matrix-white/95">
      {post.excerpt || post.description}
    </div>
    <div class="flex flex-wrap gap-2">
      {post.tags.slice(0, 3).map((tag) => (
        <div class="badge-emerald transition-all duration-300 group-hover:border-secondary/70">
          {tag}
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  .blog-card-title {
    color: #39FF14;
    text-shadow: 0 0 10px rgba(57, 255, 20, 0.5), 0 0 20px rgba(57, 255, 20, 0.2);
  }
  
  .group:hover .blog-card-title {
    text-shadow: 0 0 12px rgba(57, 255, 20, 0.7), 0 0 24px rgba(57, 255, 20, 0.4);
  }
</style>


