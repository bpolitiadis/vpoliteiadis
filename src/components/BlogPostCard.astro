---
import AImage from './media/AImage.astro';
import type { ImageMetadata } from 'astro';

export interface BlogPostMeta {
  slug: string;
  title: string;
  excerpt?: string;
  description?: string;
  coverImage?: ImageMetadata | string;
  tags: string[];
  publishedAt: string | Date;
  readingTime?: string;
}

interface Props {
  post: BlogPostMeta;
}

const { post } = Astro.props as Props;

// Format date for display
const formattedDate = new Date(post.publishedAt).toLocaleDateString('en-US', {
  month: 'short',
  year: 'numeric'
});
---

<div
  class="group relative flex flex-col h-full w-full text-animation"
  data-title={post.title}
  data-excerpt={post.excerpt || post.description}
  data-tags={post.tags.join(',')}
>
  {/* Blog Post Image */}
  {post.coverImage && (
    <div class="relative w-full overflow-hidden rounded-lg" style="aspect-ratio: 16 / 9">
      <a
        href={`/blog/${post.slug}`}
        class="block w-full h-full"
        aria-label={`Read ${post.title}`}
      >
        <AImage
          src={post.coverImage}
          alt={post.title}
          preset="card"
          class="w-full h-full object-cover rounded-lg transition-transform duration-700 group-hover:scale-110 will-change-transform"
          loading="lazy"
          decoding="async"
          width={1024}
          height={576}
        />
        <!-- Matrix gradient overlay -->
        <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-background/95 via-background/40 to-transparent opacity-90 group-hover:opacity-60 transition-opacity duration-500 rounded-lg" />
      </a>
    </div>
  )}

  <div class="flex flex-col space-y-3 mt-4">
    {/* Date and Reading Time - Minimal design */}
    <div class="flex items-center gap-2 text-xs text-matrix-white/60 font-inter">
      <time datetime={new Date(post.publishedAt).toISOString()}>
        {formattedDate}
      </time>
      {post.readingTime && (
        <>
          <span aria-hidden="true">â€¢</span>
          <span>{post.readingTime}</span>
        </>
      )}
    </div>
    <div class="font-bold leading-none tracking-tight font-orbitron text-lg md:text-xl">
      <a
        href={`/blog/${post.slug}`}
        class="inline-flex items-center gap-2 text-neon-lime hover:text-neon-lime/90 transition-all duration-300 hover:scale-[1.02] origin-left"
        style={{ color: '#39FF14', textShadow: '0 0 10px rgba(57, 255, 20, 0.6), 0 0 20px rgba(57, 255, 20, 0.3)' }}
      >
        {post.title}
      </a>
    </div>
    <div class="text-sm text-matrix-white/85 leading-relaxed">
      {post.excerpt || post.description}
    </div>
    <div class="flex flex-wrap gap-2">
      {post.tags.slice(0, 3).map((tag) => (
        <div class="badge-emerald">
          {tag}
        </div>
      ))}
    </div>
  </div>
</div>


