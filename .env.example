# ===========================================
# Environment Variables Configuration
# ===========================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control

# ===========================================
# Resend Email Service Configuration
# ===========================================
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# The email address that will send emails (must be verified in Resend)
# This should be a domain you own and have verified in Resend
FROM_EMAIL=noreply@yourdomain.com

# The email address where contact form submissions will be sent
# This can be the same as FROM_EMAIL or a different address
CONTACT_EMAIL=contact@yourdomain.com

# Optional: Email address for replies (defaults to form submitter's email)
# If not set, replies will go to the form submitter's email
REPLY_TO_EMAIL=contact@yourdomain.com

# Optional: Send confirmation email to form submitter (true/false)
# Set to 'true' to send an automated confirmation email
SEND_CONFIRMATION_EMAIL=true

# Optional: Email subject prefix for contact form notifications
# Defaults to '[Contact Form]' if not set
EMAIL_SUBJECT_PREFIX=[Contact Form]

# Optional: Enable debug logging for email sending (true/false)
# Set to 'true' to log detailed email sending information
RESEND_DEBUG=false

# ===========================================
# Rate Limiting Configuration
# ===========================================
# Rate limiting window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW=60000

# Maximum requests per window (default: 10)
RATE_LIMIT_REQUESTS=10

# ===========================================
# Development Configuration
# ===========================================
# Set to 'development' for local development
NODE_ENV=development

# ===========================================
# Other Environment Variables
# ===========================================
# Add any other environment variables your application needs here
# For example:
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# REDIS_URL=redis://localhost:6379
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
